<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_customer_type_form_view" model="ir.ui.view">
        <field name="name">account.customer.type.form</field>
        <field name="model">account.customer.type</field>
        <field name="arch" type="xml">
            <form string="Customer Type">
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Customer Type Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Discount Rule" name="discount_rule">
                            <field name="discount_rule_id" nolabel="1">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="discount_percentage"/>
                                    <field name="min_amount"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="account_customer_type_tree_view" model="ir.ui.view">
        <field name="name">account.customer.type.tree</field>
        <field name="model">account.customer.type</field>
        <field name="arch" type="xml">
            <tree string="Customer Types">
                <field name="name"/>
                <field name="code"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="account_customer_type_search_view" model="ir.ui.view">
        <field name="name">account.customer.type.search</field>
        <field name="model">account.customer.type</field>
        <field name="arch" type="xml">
            <search string="Customer Types">
                <field name="name"/>
                <field name="code"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_account_customer_type" model="ir.actions.act_window">
        <field name="name">Customer Types</field>
        <field name="res_model">account.customer.type</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
