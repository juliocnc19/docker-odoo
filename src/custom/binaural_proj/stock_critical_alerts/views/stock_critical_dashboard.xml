<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_critical_stock_tree" model="ir.ui.view">
        <field name="name">product.template.critical.stock.tree</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <tree string="Critical Stock Products" decoration-danger="qty_available &lt; stock_minimum">
                <field name="name"/>
                <field name="categ_id"/>
                <field name="qty_available"/>
                <field name="stock_minimum"/>
                <field name="uom_id" groups="uom.group_uom"/>
            </tree>
        </field>
    </record>

    <record id="product_template_critical_stock_kanban" model="ir.ui.view">
        <field name="name">product.template.critical.stock.kanban</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="categ_id">
                <field name="name"/>
                <field name="categ_id"/>
                <field name="qty_available"/>
                <field name="stock_minimum"/>
                <field name="image_128"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('product.template', 'image_128', record.id.raw_value)" alt="Product"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_tags_section">
                                    <field name="categ_id"/>
                                </div>
                                <div class="text-danger">
                                    <strong>Stock: </strong><field name="qty_available"/>
                                    <strong> / Min: </strong><field name="stock_minimum"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_product_critical_stock" model="ir.actions.act_window">
        <field name="name">Critical Stock Dashboard</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('stock_alert_sent', '=', True), ('type', '=', 'product')]</field>
        <field name="context">{'group_by': 'categ_id'}</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('product_template_critical_stock_kanban')}),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('product_template_critical_stock_tree')})]"/>
    </record>

    <menuitem id="menu_critical_stock_root"
        name="Critical Stock"
        parent="stock.menu_stock_root"
        action="action_product_critical_stock"
        sequence="5"/>
</odoo>
